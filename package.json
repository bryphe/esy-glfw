{
  "name": "reason-glfw",
  "version": "0.1.1",
  "description": "GLFW bindings for OCaml",
  "license": "MIT",
  "esy": {
    "build": [
        ["make", "#{os == 'windows' ? 'noop' : 'build-glfw'}", "ROOTDIR=#{self.root}"],
        ["dune", "build", "--root", "."],
        ["dune", "build", "--root", ".", "./bin_js/test_glfw.bc.js"],
        ["make", "install", "ROOTDIR=#{self.root}", "LIBDIR=#{self.lib}/reglfw"]
    ],
    "install": [
        "esy-installer"
    ],
    "buildsInSource":"_build"
  },
  "peerDependencies": {
    "ocaml": "~4.6.0"
  },
  "resolutions": {
    "esy-cmake": "github:bryphe/esy-cmake#5a40a8e",
    "@opam/menhir": "20171013",
    "@opam/re": "1.8.0"
  },
  "dependencies": {
    "@opam/dune": "*",
    "@esy-ocaml/reason": "*",
    "refmterr": "*",
    "@opam/js_of_ocaml": "*",
    "@opam/js_of_ocaml-compiler": "*",
    "@opam/js_of_ocaml-lwt": "*",
    "@opam/lwt": "^4.0.0",
    "@opam/lwt_ppx": "^1.1.0",
    "esy-cmake": "*",
    "reason-gl-matrix": "bryphe/reason-gl-matrix"
  },
  "devDependencies": {
    "ocaml": "~4.6.0"
  }
}
